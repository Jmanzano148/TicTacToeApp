<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".dosjugadores.DosJugadoresActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Nombre del jugador 1"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/barraNombre1"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:inputType="text"
            android:maxLength="12"
            android:maxLines="1"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Ficha jugador 1"
            android:textSize="18sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40sp">

            <androidx.cardview.widget.CardView
                android:id="@+id/selFicha1Jug1"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginEnd="40sp"
                app:cardBackgroundColor="@color/seleccionado"
                app:cardCornerRadius="15dp"
                app:cardElevation="0sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="O"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="80sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/selFicha2Jug1"
                android:layout_width="100sp"
                android:layout_height="100sp"
                app:cardBackgroundColor="@color/sinselecionar"
                app:cardCornerRadius="15sp"
                app:cardElevation="0sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="X"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="80sp" />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Nombre del jugador 2"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/barraNombre2"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:inputType="text"
            android:maxLength="12"
            android:maxLines="1"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Ficha jugador 2"
            android:textSize="18sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp">

            <androidx.cardview.widget.CardView
                android:id="@+id/selFicha1Jug2"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginEnd="40sp"
                app:cardBackgroundColor="@color/sinselecionar"
                app:cardCornerRadius="15dp"
                app:cardElevation="0sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="O"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="80sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/selFicha2Jug2"
                android:layout_width="100sp"
                android:layout_height="100sp"
                app:cardBackgroundColor="@color/seleccionado"
                app:cardCornerRadius="15sp"
                app:cardElevation="0sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="X"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="80sp" />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/botonComenzar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Comenzar" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>